<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tarea2.Segunapagina">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding nombre}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lblnombre"/>


            <Label Text="{Binding apellido}" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"  x:Name="lblapellido"/>


            <Label Text="{Binding edad}" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"  x:Name="lbledad"/>


            <Label Text="{Binding correo}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"  x:Name="lblcorreo"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>